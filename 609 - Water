#include <iostream>
#include <algorithm>
typedef long long int lli;
using namespace std;

int main(){
    lli n, k;
    cin >> n >> k;
    lli arr[n];
    for (lli i = 0; i < n; ++i){
        cin >> arr[i];
        if (arr[i] > k){
            cout << "Impossible";
            return 0;
        }
    }
    sort(arr, arr + n);
    lli left = 0, right = n - 1, count = 0;
    while (left <= right){
        count++;
        if (arr[left] + arr[right] <= k)
            left++;
        right--;
    }
    
    cout << count;
    
    
    return 0;
}
