#include <iostream>
#include <algorithm>
typedef long long int lli;
using namespace std;
void reverse(lli arr[], lli size){
    for (int i = 0; i < size / 2; ++i)
        swap(arr[i], arr[size - 1 - i]);
}
int main(){
    lli n;
    cin >> n;
    lli arr[n];
    lli max = 0;
    for (lli i = 0; i < n; ++i){
        cin >> arr[i];
    }
    sort(arr, arr + n);
    reverse(arr, n);
    for (int i = 0; i < n; ++i){
        arr[i] += (i + 1);
        if (max < arr[i]) max = arr[i];
    }
    cout << max + 1;
    return 0;
}
